<% @users.each do |u| %>

<tr>
<td><%= u.id.to_s %></td>
<td><%= u.name %></td>
<td><%= u.language %></td>
<td><%= link_to 'Select this user?', {controller: 'users', action: 'show', id: u} %> </td>
<td><%= link_to 'Edit', {controller: 'users', action: 'edit', id: u} %> </td>
